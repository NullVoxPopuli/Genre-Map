<%= javascript_include_tag "/js/jquery-ui-1.8.21.custom.min.js", "/js/cookies.js", "/js/dom-utils.js", "/js/d3.js", "/js/interface.js","/js/graph.js" %>
<script type="text/javascript">
	connections = <%= @connections.html_safe %>;
	genre_nodes = <%= @nodes.html_safe %>;
	hiddenSuperGenres = <%= @super_genres_json.html_safe %>;
	categories = <%= @categories.html_safe %>;
	yearsByGenre = <%= @years_by_genre.html_safe %>;

	data = {
		nodes: genre_nodes,
		links: connections
	};
</script>

<div class="debug_panel">

</div>

<ul class="super_genre_list">
	<% @super_genres.each do |genre| %>
		<li class="super_genre_list_item" data-name="<%= genre.name %>">
			<%= genre.name %>
		</li>
	<% end %>
</ul>

<div class="stop_playback">
	Stop Music
</div>

<div class="repulsion_slider" style="display: none;">
	<input type="range" value="700" min="0" max="3000" step="10">
</div>

<div class="search_container">
	<%= text_field_tag 'search', nil, :placeholder => 'Search...' %>
</div>
<div class="interface_options">
	<a href="#" class="hide">Hide Interface</a>
</div>


<div class="genre_details super_container" style="display: none;">
	<div class="background"></div>
	<div class="container">
		<div class="content">
			<div class="header">
				<span class="name">

				</span>
				<span class="close">
					[X] Close
				</span>
			</div>
			<div class="body">
				<div class="description">

				</div>
				<span class="wiki">
					<a href="#">Wikipedia Info</a>
				</span>
				<span class="example_title"> Examples </span>
				<div class="examples">

				</div>
				<div class="theater">

				</div>
			</div>
		</div>
	</div>
</div>


<div class="information">
	<div class="welcome">
		<h2>Electronic Music Genre Graph</h2>
		<div class="authors">
			By:
			<span class="author">
				L. Preston Sego III
			</span>
			<span class="author">
				Evan Kirsch
			</span>
		</div>
		<div class="development_info">

		</div>
	</div>
	<div class="disclaimer">
		<h4>Disclaimer:</h4>
		<div class="claimer">
			This site is desigened with Webkit-based browsers on 1080p+ monitors.<br />
			For best results: use a modern browser (FireFox 13+, Chrome 20+, Safari 5+), and use a resolution that is 1920 by 1080 pixels or greater.

			<p>
				The current relationships of the genres in this graph may be out of date. If you would like to suggest a correction, or add content, please email: theprecognition+genre [at] gmail [dot] com. 
			</p>
		</div>
	</div>
	<div class="instructions_container">
		<h4>Instructions:</h4>
		<div class="instructions">
			<p>Click on a node to view details about the genre.</p> 
			<h5>Navigation</h5>
			<p>Click on a super genre (blueish) to collapse / expand that genre's related sub genres.</p>
			<p>
				Clicking on a sub genre (gray) will bring up info about that genre.
			</p>

		</div>
	</div>
	<div class="credits_container">
		<h4>Credits</h4>
		<div class="credits">
			<p>
				<a href="http://www.ishkur.com/">Ishkur</a> and his <a href="http://techno.org/electronic-music-guide/">Electronic Music Guide</a>.
			</p>
			<p>
				<a href="http://youtube.com">YouTube</a>, 
				<a href="http://soundcloud.com">Soundcloud</a>, and 
				<a href="http://vimeo.com">Vimeo</a> for hosting the Audio used for this project.
			</p>
		</div>
	</div>

	<% unless user_signed_in? %>
		<div class="signin">
			<%= link_to "Sign In", new_user_session_path %> | 
		</div>
	<% end %>
</div>

