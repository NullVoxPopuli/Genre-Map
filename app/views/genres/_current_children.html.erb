<div class="genres">
<% @current_children.each do |origin_genre| %>
	<div class="child">
		<%= link_to "Remove", {:controller => :genres,
			:action => :update_children, :id => @genre[:id],
			:child_id => origin_genre[:id], :update => "remove"}, :class => "remove", :remote => true %>
		 | <%= link_to origin_genre.name, edit_genre_path(origin_genre) %>
	</div>
<% end %>
</div>

<script type="text/javascript">

		$(".child .remove").unbind("click");
		$(".child .remove").bind("click", function(){
			// remove from this list, add to other list, change the link
			$(this).parent().remove();
		});
</script>