<%= form_for(@genre) do |f| %>
  <% if @genre.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@genre.errors.count, "error") %> prohibited this genre from being saved:</h2>

      <ul>
      <% @genre.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul> 
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %> : 
    <%= f.text_field :name %> aka <%= f.text_field :aka %>

  </div>
  <div class="field">
    <%= f.label :kind %> : 
    <%= f.select :kind, options_for_select(Genre.kinds, @genre.kind.to_i), {:selected => @genre.kind.to_i } %> 

    <%= f.label :category_id %> : 
    <%= f.select :category_id, Category.all.map {|r| [r.name,r.id] }, {:include_blank => true} %>
  </div>
  <div class="field">
    <%= f.label :super_genre %> : 
    <%= f.select :super_genre_id, (Genre.find(:all, :conditions => ["kind = ?", Genre::SUPER_GENRE])).map {|r| [r.name,r.id] }, {:include_blank => true} %>
  </div>
  <div class="field">
    <%= f.label :wikipedia %> : 
    <%= f.text_field :wikipedia %> <br />
    <%= link_to "Attempt Info Scrape from Wiki", 
          {:action => "scrape_wiki",
            :id => @genre[:id]}, 
          :class => "wiki_scrape", 
          :remote => true %>
  </div>
  <div class="field">
    <%= f.label :description %> <br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :decade %> : 
    <%= f.text_field :decade %>
  </div>
    <div class="field">
    <%= f.label :suggested_origins %> <br />
    <%= f.text_area :suggested_origins, :rows => "5"%>
  </div>
<br/>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<% unless @genre.new_record? %>
  <table class="relationships">
    <tr>
    <td class="origins">
      <h5>Origin Genres</h5>
      <div id="current_genres">
        <%= render :partial => "current_origins" %>
      </div>
      <h5>Available Genres</h5>
      <div id="available_genres">
        <%= render :partial => "available_origins" %>
      </div>
    </td>

    <td class="children">
      <h5>Current Children</h5>
      <div id="current_children">
        <%= render :partial => "current_children" %>
      </div>
      <h5>Available Children</h5>
      <div id="available_children">
        <%= render :partial => "available_children" %>
      </div>
    </td>

    <td class="tracks">
      <h5>Current Associated Tracks</h5>
      <div id="current_tracks">
        <%= render :partial => "current_tracks" %>
      </div>
      <h5>Available Tracks</h5>
      <div id="available_tracks">
        <%= render :partial => "available_tracks" %>
      </div>
    </td>
  </tr>

  </table>
<% end %>


<script type="text/javascript">
$(function(){
  $(".wiki_scrape").bind("ajax:before", function(){
    var href = $(this).attr("href");
    $(this).attr("href", 
      href + (href.indexOf("?") > -1 ? "&" : "?") + "wiki=" + encodeURIComponent($("#genre_wikipedia").val()));
  })
  $('.wiki_scrape').bind('ajax:success', function(evt, data, status, xhr){
    var data = JSON.parse(data);
    var o = $("#genre_suggested_origins");
    o.val("");
    var d = $("#genre_description");
    d.val("");

    // suggested origin genres
    $.each(data.origins, function(index, element){
      o.val(o.val() + element + "\n" );
    });

    // description - html, don't do newline
    $.each(data.description, function(index, element){
      d.val(d.val() + element);
    });

    $("#genre_name").val(data.name);
    $("#genre_decade").val(data.decade);
  });
});


</script>